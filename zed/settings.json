// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "agent": {
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "openai",
      "model": "gpt-4o"
    }
  },

  "edit_predictions": {
    "disabled_globs": ["*.env"],
    "mode": "subtle",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null,
      "enterprise_uri": null
    },
    "enabled_in_text_threads": false
  },
  "context_servers": {
    "cloudflare": {
      "source": "custom",
      "enabled": true,
      "command": "npx",
      "args": ["-y", "mcp-remote", "https://browser.mcp.cloudflare.com/sse"],
      "env": {}
    },
    "Astro docs": {
      "source": "custom",
      "enabled": true,
      "command": "npx",
      "args": ["-y", "mcp-remote", "https://mcp.docs.astro.build/mcp"],
      "env": {}
    }
  },
  "icon_theme": "JetBrains New UI Icons (Light)",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "base_keymap": "JetBrains",
  "ui_font_size": 18,
  "buffer_font_size": 15,
  "buffer_font_features": {
    "calt": false
  },
  "theme": {
    "mode": "system",
    "light": "VSCode Dark Modern",
    "dark": "One Dark"
  },
  "languages": {
    "TypeScript": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    }
  },
  "experimental.theme_overrides": {
    "editor.document_highlight.bracket_background": "#ffe1004d",
    "tab.active_background": "#613270"
  },
  "format_on_save": "prettier",
  "agent_font_size": 20,
  "project_panel": {
    "auto_fold_dirs": false
  },
  "autosave": "on_focus_change"
}
