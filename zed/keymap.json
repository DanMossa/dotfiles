      "alt-9": [
        "task::Spawn",
        {
          "task_name": "tv git diff",
          "reveal_target": "center"
        }
      ]
    }
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      // "j k": "vim::NormalBefore"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "alt-cmd-l": "editor::Format",
      "ctrl-cmd-l": ["task::Spawn", { "task_name": "Beautify file" }],
